<style>
  .jumbotron {
    margin-top:10%;
    background-color: white;
  }
</style>

<div class="jumbotron col-sm-9 offset-2">
    <div class="row col-12 ">
      <h2 class="col-3 offset-4">Register</h2>
    </div>

    <div>
    <br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>


  

  <div class="row col-12">
    <label class="col-3 text-right">ID:</label>
    <%= form.text_field :volunteer_id, id: :volunteer_volunteer_id , :class=>"col-2 form-control"%> 
  </div>
    <br>
  <div class="row col-12">
    <label class="col-3 text-right">First Name:</label>
    <%= form.text_field :firstName, id: :volunteer_firstName, :class=>"col-3 form-control" %>
  
    <label class="col-3 text-right">Last Name: </label>
    <%= form.text_field :lastName, id: :volunteer_lastName, :class=>"col-3 form-control" %>
  </div>
    <br>
  <div class="row col-12">
    <label class="col-3 text-right">Type:</label>
    <%= form.text_field :volType, id: :volunteer_volType, :class=>"col-3 form-control" %>
    <label class="col-3 text-right">Email:</label>
    <%= form.email_field :email, id: :volunteer_email, :class=>"col-3 form-control" %>
  </div>
  <br>
  <div class="row col-12">
    <label class="col-3 text-right">Telephone:</label>
    <%= form.telephone_field :phoneNum, id: :volunteer_phoneNum, :class=>"col-3 form-control" %>
    <label class="col-3 text-right">Password:</label>
    <%= form.password_field :password, autocomplete: "off", :class=>"col-3 form-control" %>
   </div>
   <br>
  <div class="row col-12">
     <label class="col-3 offset-6 text-right">Password:</label>
    <%= form.password_field :password_confirmation, autocomplete: "off", :class=>"col-3  form-control" %>
  </div>
  <br />
    <div class="row col-12">
    <label class="col-3 text-right">Date Joined:</label>
    <%= form.date_field :dateJoined, id: :volunteer_dateJoined, :class=>"datepicker form-control col-4" %>
    
    </div>
  <br>
  <div  class="row col-12">
  
 <%= form.submit "Sign up" , :class=>"btn col-3 offset-1" %>
  <%= link_to "Back", "/volunteers/home", :class=>"btn col-3 offset-5" %>
  
  </div>
  
 
<% end %>

