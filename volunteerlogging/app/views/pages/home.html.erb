    <script>
        $("button").click(function(e){
            $("button").hide();
            if(e.target.id == "admin"){
                if (<%=admin_signed_in?=%>) {
                    window.location = "/admins/dashboard";
                 }else
                window.location = "/admin/sign_in";
            }else{
                if (<%=volunteer_signed_in?=%>) {
                    window.location = "/volunteers/home"
                }
                else
                window.location = "/volunteer/sign_in";
            }

        });

    </script>
