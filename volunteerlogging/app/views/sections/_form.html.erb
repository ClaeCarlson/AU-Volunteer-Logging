    <%= form.text_field :event_id, :class=>"col-3 form-control" %>
  </div>
    <br>
   <%= form.label :start_time %>
    <%= form.datetime_select :start %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
